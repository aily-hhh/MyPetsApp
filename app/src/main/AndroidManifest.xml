<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hhh.mypetsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MyApp"
        android:enabled="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyPetsApp">
        <activity
            android:name=".ui.notes.NotesTakerActivity"
            android:exported="false"
            android:configChanges="locale"/>
        <activity
            android:name=".ui.reproduction.ReproductionTakerActivity"
            android:exported="false"
            android:configChanges="locale"/>
        <activity
            android:name=".ui.surgical.SurgicalProceduresTakerActivity"
            android:exported="false"
            android:configChanges="locale"/>
        <activity
            android:name=".ui.dehelmintization.DehelmintizationTakerActivity"
            android:exported="false"
            android:configChanges="locale"/>
        <activity
            android:name=".ui.treatment.TreatmentsTakerActivity"
            android:exported="false"
            android:configChanges="locale"/>
        <activity
            android:name=".ui.vaccines.VaccinesTakerActivity"
            android:exported="false"
            android:configChanges="locale"/>
        <activity
            android:name=".NewPetActivity"
            android:exported="false"
            android:configChanges="locale"/>
        <activity
            android:name=".AboutMeActivity"
            android:exported="false"
            android:configChanges="locale"/>
        <activity
            android:name=".PetProfileActivity"
            android:exported="false"
            android:configChanges="locale"/>
        <activity
            android:name=".VetPassportActivity"
            android:exported="false"
            android:label="@string/title_activity_vet_passport"
            android:configChanges="locale"/>
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:configChanges="locale"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="locale"/>
        <activity
            android:name=".AuthActivity"
            android:configChanges="locale"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>