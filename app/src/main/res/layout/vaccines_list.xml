<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vaccinesContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/forNotes"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    style="@style/Theme.MyPetsApp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C3C8F1">

            <TextView
                android:id="@+id/typeVaccine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Type"
                android:textColor="@color/purple_700"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/nameVaccine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="monospace"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/purple_500"
            android:textSize="14sp"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/manufacturerVaccine"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Manufacturer"
                android:textColor="@color/purple_500"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/dateVaccine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/manufacturerVaccine"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Date"
                android:textColor="@color/purple_500"
                android:textSize="10sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <TextView
            android:id="@+id/veterinarian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6F0"
            android:layout_alignParentStart="true"
            android:ellipsize="marquee"
            android:fontFamily="monospace"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="8dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Veterinarian"
            android:textColor="@color/purple_700"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>

</androidx.cardview.widget.CardView>