<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/surgicalProceduresContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/forNotes"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    style="@style/Theme.MyPetsApp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C3C8F1">

            <TextView
                android:id="@+id/typeSurgicalProcedureL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Type"
                android:textColor="@color/purple_700"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nameSurgicalProcedureL"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Name"
                android:textColor="@color/purple_500"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/dateSurgicalProcedureL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/nameSurgicalProcedureL"
                android:ellipsize="marquee"
                android:fontFamily="monospace"

                android:marqueeRepeatLimit="marquee_forever"
                android:paddingTop="12dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Date"
                android:textColor="@color/purple_500"
                android:textSize="10sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/anesthesiaSurgicalDescriptL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:padding="8dp"
                android:text="@string/anesthesiaList"
                android:textColor="@color/purple_200"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/anesthesiaSurgicalProcedureL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/anesthesiaSurgicalDescriptL"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Anesthesia"
                android:textColor="@color/purple_500"
                android:textSize="14sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/veterinarianSurgicalDescriptL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:padding="8dp"
                android:text="@string/veterinarianList"
                android:textColor="@color/purple_200"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/veterinarianSurgicalProcedureL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/veterinarianSurgicalDescriptL"
                android:ellipsize="marquee"
                android:fontFamily="monospace"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Veterinarian"
                android:textColor="@color/purple_500"
                android:textSize="14sp"
                android:textStyle="normal" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>