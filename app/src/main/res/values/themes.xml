<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyPetsApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7433D1</item>
        <item name="colorPrimaryDark">#8E74C9</item>
        <item name="colorAccent">@color/forButtons</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="fontFamily">monospace</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyPetsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyPetsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyPetsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>